                                    <goal>generateSoapUIProject</goal>
                                </goals>
                                <configuration>
                                    <mockWSDLFiles>
                                        <param>${basedir}${file.separator}src${file.separator}main${file.separator}resources${file.separator}mocks${file.separator}HelloWorld3.wsdl</param>
                                        <param>${basedir}${file.separator}src${file.separator}main${file.separator}resources${file.separator}mocks${file.separator}HelloWorld4.wsdl</param>
                                    </mockWSDLFiles>
                                    <soapUIProjectFileName>${basedir}${file.separator}src${file.separator}test${file.separator}resources${file.separator}soapui-projectgen-mock-service-file-soapui.xml</soapUIProjectFileName>
                                    <projectName>soapui-projectgen-mock-service-file</projectName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <!-- SoapUIProject: Create a project with MockServies from WSDL dir -->
        <profile>
            <id>soapui-projectgen-mock-service-dir</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>soapui-projectgen-maven-plugin</artifactId>
                        <groupId>com.carlgira</groupId>
                        <version>1.0.0-SNAPSHOT</version>
                        <executions>
                            <execution>
                                <phase>generate-sources</phase>
                                <id>soapui-projectgen-mock-service-dir</id>
                                <goals>
                                    <goal>generateSoapUIProject</goal>
                                </goals>
                                <configuration>
                                    <mockWSDLDir>${basedir}${file.separator}src${file.separator}main${file.separator}resources${file.separator}mocks</mockWSDLDir>
                                    <soapUIProjectFileName>${basedir}${file.separator}src${file.separator}test${file.separator}resources${file.separator}soapui-projectgen-mock-service-dir-soapui.xml</soapUIProjectFileName>
                                    <projectName>soapui-projectgen-mock-service-dir</projectName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <!-- SoapUIProject: Create a project with TestSuites and MockServies from WSDL dirs -->
        <profile>
            <id>soapui-projectgen-wsdl-dirs</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>soapui-projectgen-maven-plugin</artifactId>
                        <groupId>com.carlgira</groupId>
                        <version>1.0.0-SNAPSHOT</version>
                        <executions>
                            <execution>
                                <phase>generate-sources</phase>
                                <id>soapui-projectgen-wsdl-dirs</id>
                                <goals>
                                    <goal>generateSoapUIProject</goal>
                                </goals>
                                <configuration>
                                    <testWSDLDir>${basedir}${file.separator}src${file.separator}main${file.separator}resources${file.separator}services</testWSDLDir>
                                    <mockWSDLDir>${basedir}${file.separator}src${file.separator}main${file.separator}resources${file.separator}mocks</mockWSDLDir>
                                    <soapUIProjectFileName>${basedir}${file.separator}src${file.separator}test${file.separator}resources${file.separator}soapui-projectgen-wsdl-dirs-soapui.xml</soapUIProjectFileName>
                                    <testPropertiesFile>${basedir}${file.separator}src${file.separator}test${file.separator}resources${file.separator}soapui-projectgen-wsdl-dirs-endpoints.properties</testPropertiesFile>
                                    <projectName>soapui-projectgen-wsdl-dirs</projectName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>